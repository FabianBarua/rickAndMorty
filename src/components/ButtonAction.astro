---
type Props = {
  href?: string;
  textColor?: "blue" | "default";
};

const ALL_TEXT_COLORS = {
  blue: "text-rickBlue",
  default: "text-default-900",
};

//icon is an Astro component
const { href, textColor }: Props = Astro.props;

const ButtonColor = ALL_TEXT_COLORS[textColor] || ALL_TEXT_COLORS.default;

const buttonClass = `transition-all ${ButtonColor} hover:text-default-900 h-9 p-2 text-base flex justify-center items-center gap-2 bg-default-100 hover:bg-rickBlue rounded-full`;

// si existe href retornar un a, si no un button
---

{
  href ? (
    <a href={href} class={buttonClass}>
      <slot />
    </a>
  ) : (
    <button class={buttonClass}>
      <slot />
    </button>
  )
}
