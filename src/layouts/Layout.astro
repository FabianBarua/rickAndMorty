---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import ButtonAction from "../components/ButtonAction.astro";
import Heart from "../components/Icons/Heart.astro";
import Logo from "../components/Icons/Logo.astro";
import ThemeSwitch from "@components/ThemeSwitch.astro";
import "./global.css";
import ArrowUp from "@/components/Icons/ArrowUp.astro";
import DevIcon from "@/components/Icons/DevIcon.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  class="transition-colors duration-300 scroll-smooth scrollbar-hide"
  data-theme="dark"
  lang="en"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Rick and Morty ðŸ§ª"}</title>
    <ViewTransitions />
  </head>
  <body
    id="home"
    class="transition-colors duration-300 bg-background min-h-dvh flex flex-col"
  >
    <header
      class="sm:max-w-xl lg:max-w-5xl mx-auto h-36 w-full flex sm:flex-row flex-col sm:items-end sm:justify-between justify-end gap-6 mt-9 sm:mt-0 sm:gap-0 items-center pb-4"
    >
      <a href="/">
        <Logo class="h-16 sm:h-12 w-auto fill-rickBlue" />
      </a>
      <nav class="h-min flex gap-3 justify-end items-center">
        <ButtonAction textColor="blue" href="/favoritos">
          <Heart /> Mis favoritos
        </ButtonAction>
        <ThemeSwitch />
      </nav>
    </header>
    <main class="flex-1">
      <slot />
    </main>
    <footer
      transition:name="footer"
      class="sm:max-w-xl px-2 w-full py-12 lg:max-w-5xl gap-2 flex flex-col text-default-400 mx-auto"
    >
      <div class="flex justify-between items-center">
        <Logo class="h-12 w-auto fill-rickBlue" />
        <a
          class="flex group text-nowrap h-6 gap-2 hover:-translate-y-1 transition-all"
          href="#home"
          >Volver arriba

          <ArrowUp />
        </a>
      </div>
      <hr class="text-foreground-100" />
      <div
        class="flex flex-col-reverse sm:flex-row items-center justify-between"
      >
        <p>Â© 2024 Rick and Morty</p>
        <p class="flex gap-2">
          Desarrollado por
          <span class="text-rickBlue flex justify-center items-center gap-2"
            >Fabian Barua <DevIcon />
          </span>
        </p>
      </div>
    </footer>
  </body>
</html>
